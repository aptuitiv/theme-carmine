{% if image and content %}
    {% set imageCol = 'col-1-1 col-lg-1-2' %}
    {% set contentCol = 'col-1-1 col-lg-1-2' %}
    {% if imageSize == 'Third' %}
        {% set imageCol = 'col-1-1 col-md-1-2 col-lg-1-3' %}
        {% set contentCol = 'col-1-1 col-md-1-2 col-lg-2-3' %}
    {% elseif imageSize == 'Quarter' %}
        {% set imageCol = 'col-1-1 col-md-1-2 col-lg-1-4' %}
        {% set contentCol = 'col-1-1 col-md-1-2 col-lg-3-4' %}
    {% endif %}
    {% set contentWrapper = '' %}
        {% set contentWrapper = contentWrapper ~ 'flex align-center h-100' %}
        {% if imagePosition == 'Right' %}
            {% set contentWrapper = contentWrapper ~ ' pe-2 pe-lg-5' %}
            {% set imageCol = imageCol ~ ' order-lg-2' %}
            {% set contentCol = contentCol ~ ' order-lg-1' %}
        {% else %}
            {% set contentWrapper = contentWrapper ~ ' ps-2 ps-lg-5' %}
        {% endif %}
    {% if image %}
    {% endif %}
    <div class="Container Container--pad">
        <div class="grid py-2 py-lg-4">
            <div class="{{ imageCol }}">
                {% do image.resize(800) %}
                {% do image.lazy() %}
                {% set image.class = "w-100" %}
                <div class="flex align-center h-100">
                    {{ image.tag }}
                </div>
            </div>
            <div class="{{ contentCol }}">
                <div class="{{ contentWrapper }}">
                    <div class="clearfix first-child-st-0 last-child-sb-0">{{ content }}</div>
                </div>
            </div>
        </div>
    </div>
{% endif %}
