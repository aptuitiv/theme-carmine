{% include 'snippets/header' %}

{% block banner %}
    {{ _page.content('banner') }}
{% endblock %}

<div class="ContentContainer">
    {% if _core.theme.settings.showBreadcrumb == "yes" and _page.isHome == false %}
        {{ _page.breadcrumb() }}
    {% endif %}
    <div class="Container Container--pad">
        <div class="grid g-3">
            <div class="col-1-1 col-3-4-lg">
                <main>{% block main _page.content() %}</main>
            </div>
            <div class="col-1-1 col-1-4-lg">
                <aside>{% block sidebar _page.content("sidebar") %}</aside>
                <aside>{{ _api.navigation.getSubNavigationByUrl.key('main').getParentItem('yes').showSubNav('yes').template('sidebar') }}</aside>
            </div>
        </div>
    </div>
</div>

{% include 'snippets/footer' %}
