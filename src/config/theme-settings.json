{
    "groups": [
        {
            "name": "Social Icons",
            "description": "Set the links and icons to use for your social networks in the footer of each page.",
            "fields": [
                {
                    "name": "social",
                    "label": "Social Networks",
                    "type": "repeatingGrid",
                    "itemName": "Social Network",
                    "children": [
                        {
                            "name": "icon",
                            "label": "Icon",
                            "type": "select",
                            "options": {
                                "facebook": "Facebook",
                                "instagram": "Instagram",
                                "linkedin": "LinkedIn",
                                "pinterest": "Pinterest",
                                "twitter": "Twitter",
                                "youtube": "YouTube"
                            },
                            "columnWidth": "1fr"
                        },
                        {
                            "name": "url",
                            "label": "URL to your page on this social network",
                            "type": "text",
                            "columnWidth": "2fr"
                        }
                    ]
                }
            ]
        },
        {
            "name": "Header",
            "description": "Content for the header that is used on all pages",
            "sections": [
                {
                    "name": "Logo",
                    "fields": [
                        {
                            "name": "headerLogo",
                            "label": "Logo",
                            "type": "image",
                            "path": "images",
                            "default": "/theme/custom/images/logo.jpg"
                        }
                    ]
                },
                {
                    "name": "Navigation",
                    "fields": [
                        {
                            "name": "navigationStyle",
                            "label": "Position",
                            "type": "radio",
                            "options": {
                                "left": "Left aligned",
                                "right": "Right aligned",
                                "centered": "Centered",
                                "spaced": "Evenly spaced"
                            },
                            "default": "left"
                        }
                    ]
                },
                {
                    "name": "Information",
                    "fields": [
                        {
                            "name": "headerShowSocial",
                            "label": "Show Social Icons",
                            "type": "switch",
                            "default": "yes"
                        },
                        {
                            "name": "headerShowPhone",
                            "label": "Show Phone Number",
                            "type": "switch",
                            "default": "yes"
                        },
                        {
                            "name": "headerShowEmail",
                            "label": "Show Email",
                            "type": "switch",
                            "default": "yes"
                        },
                        {
                            "name": "headerShowAddress",
                            "label": "Show Address",
                            "type": "switch",
                            "default": "yes"
                        }
                    ]
                },
                {
                    "name": "Buttons",
                    "fields": [
                        {
                            "name": "headerShowButtons",
                            "label": "Show Buttons",
                            "type": "switch",
                            "default": "no"
                        },
                        {
                            "name": "headerButtons",
                            "label": "Buttons",
                            "type": "repeatingGrid",
                            "itemName": "Button",
                            "children": [
                                {
                                    "name": "text",
                                    "label": "Button text",
                                    "type": "text"
                                },
                                {
                                    "name": "url",
                                    "label": "Button URL",
                                    "type": "url"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "name": "Footer",
            "description": "Content for the footer that is used on all pages",
            "fields": [
                {
                    "name": "footerShowNavigation",
                    "label": "Show Navigation",
                    "type": "switch",
                    "default": "yes"
                },
                {
                    "name": "footerShowPhone",
                    "label": "Show Phone Number",
                    "type": "switch",
                    "default": "yes"
                },
                {
                    "name": "footerShowEmail",
                    "label": "Show Email",
                    "type": "switch",
                    "default": "yes"
                },
                {
                    "name": "footerShowAddress",
                    "label": "Show Address",
                    "type": "switch",
                    "default": "yes"
                }
            ]
        },
        {
            "name": "Blog",
            "description": "Settings for the blog app",
            "fields": [
                {
                    "name": "blogSlidebarItems",
                    "label": "Blog sidebar items",
                    "type": "checkbox",
                    "default": [
                        "category-filter",
                        "tag-filter",
                        "recent-posts",
                        "recent-comments",
                        "post-archive"
                    ],
                    "options": {
                        "category-filter": "Category filter",
                        "tag-filter": "Tag filter",
                        "recent-posts": "Recent posts",
                        "recent-comments": "Recent comments",
                        "post-archive": "Post archive"
                    }
                },
                {
                    "name": "blogSidebarRecentPostsNumber",
                    "label": "Number of recent posts to show in the sidebar",
                    "type": "number",
                    "default": "5"
                }
            ]
        }
    ]
}